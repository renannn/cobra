
@model Cobra.Admin.Areas.Admin.Pages.User.ChangeUserPasswordModel
@{
    ViewData["Title"] ="Alterar senha" ;
}


<div class="card mt-5">
    <div class="card-header">
        <h5 class="card-title">@ViewData["Title"]</h5>
    </div>
    <div class="card-body">
        @if (Model.PModel.LastUserPasswordChangeDate.HasValue)
        {
            <div class="alert alert-warning">
                <a href="#" class="close" data-dismiss="alert">×</a>
                Última data para alterar sua senha:
                <strong>
                    @Model.PModel.LastUserPasswordChangeDate.Value
                </strong>
            </div>
        }
        <form method="post">
            <partial name="_CustomValidationSummary" />
            <div class="form-group row">
                <label asp-for="PModel.OldPassword" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <input asp-for="PModel.OldPassword" class="form-control" />
                    <span asp-validation-for="PModel.OldPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PModel.NewPassword" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <input asp-for="PModel.NewPassword" class="form-control" />
                    <span asp-validation-for="PModel.NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PModel.ConfirmPassword" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <input asp-for="PModel.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="PModel.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-2 col-md-10">
                    <button type="submit" class="btn btn-info col-md-2">Enviar</button>
                </div>
            </div>
        </form>
    </div>
</div>