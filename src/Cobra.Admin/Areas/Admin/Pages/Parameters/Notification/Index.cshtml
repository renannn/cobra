@page
@model Cobra.Admin.Areas.Admin.Pages.Parameters.Notification.IndexModel
@{
	ViewData["Title"] = "Configurações de Notificações";
}

<div class="row">
	<div class="col-sm-12">
		<div class="card">
			<div class="card-header">
				<h5>Configurações de Notificações</h5>
			</div>
			<div class="card-block">

				<form class="form-material" method="post">

					<div class="form-group form-default">
						<div class="checkbox-zoom zoom-info">
							<label>
								<input type="checkbox" asp-for="PModel.IsEnabled">
								<span class="cr"><i class="cr-icon icofont icofont-ui-check txt-info"></i></span>
								<label asp-for="PModel.IsEnabled"></label>
							</label>
						</div>
					</div>

					<div class="form-group form-default">
						<input type="text" class="form-control" asp-for="PModel.MerchantName">
						<span class="form-bar"></span>
						<label class="float-label" asp-for="PModel.MerchantName"></label>
						<span asp-validation-for="PModel.MerchantName"></span>
					</div>

					<div class="form-group form-default">
						<input type="text" class="form-control" asp-for="PModel.MerchantId">
						<span class="form-bar"></span>
						<label class="float-label" asp-for="PModel.MerchantId"></label>
						<span asp-validation-for="PModel.MerchantId"></span>
					</div>

					<div class="row">
						<div class="col-sm-10">
							<button type="submit" class="btn btn-primary m-b-0">Salvar Configurações</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>