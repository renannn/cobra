@page
@model Cobra.Admin.Areas.Admin.Pages.Parameters.GeneralSettings.IndexModel
@{
	ViewData["Title"] = "Configurações de Gerais";
}

<div class="row">
	<div class="col-sm-12">
		<div class="card">
			<div class="card-header">
				<h5>Configurações de Gerais</h5>
			</div>
			<div class="card-block">

				<form class="form-material" method="post">
					 
					<div class="form-group form-default">
						<textarea class="form-control" asp-for="PModel.TermsOfUse"></textarea>
						<label class="float-label" asp-for="PModel.TermsOfUse"></label>
						<span asp-validation-for="PModel.TermsOfUse"></span>
					</div> 

					<div class="row">
						<div class="col-sm-10">
							<button type="submit" class="btn btn-primary m-b-0">Salvar Configurações</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>