@page "{id?}"
@model Cobra.Admin.Areas.Domain.Pages.RegionalStatePage.ItemModel
@{
	ViewData["Title"] = "Cadastro de Estados";
}

<div class="row">
	<div class="col-sm-12">
		<div class="card">
			<div class="card-header">
				<h5>Configurações de Notificações</h5>
			</div>
			<div class="card-block">

				<form class="form-material" method="post">
                    <input type="hidden" asp-for="PModel.SiglaOld">
					
					<partial name="_CustomValidationSummary" />

					<div class="form-group form-default">
						<input type="text" class="form-control" asp-for="PModel.Sigla">
						<span class="form-bar"></span>
						<label class="float-label" asp-for="PModel.Sigla"></label>
						<span class="text-danger" asp-validation-for="PModel.Sigla"></span>
					</div>

					<div class="form-group form-default">
						<input type="text" class="form-control" asp-for="PModel.Nome">
						<span class="form-bar"></span>
						<label class="float-label" asp-for="PModel.Nome"></label>
						<span class="text-danger" asp-validation-for="PModel.Nome"></span>
					</div>

					<div class="row">
						<div class="col-sm-10">
							<button type="submit" class="btn btn-primary m-b-0">Salvar Registro</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>